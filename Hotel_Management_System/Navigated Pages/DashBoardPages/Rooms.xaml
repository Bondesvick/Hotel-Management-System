                    <Grid.RowDefinitions>
                        <RowDefinition
        Height="140" />
                        <RowDefinition
        Height="*" />
                        <RowDefinition
        Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image
      Source="/Hotel_Management_System;component/Assets/tablet-1442900_1920.jpg"
      
      Stretch="UniformToFill" />
